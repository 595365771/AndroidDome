    package="com.blackcat.example">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.BlackApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">

        </activity>
        <activity
            android:name=".ui.touchevent.TouchEventActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.thread.ThreadOneActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.thread.ThreadTwoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.thread.ThreadThreeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.service.ServiceOneActivity"
            android:screenOrientation="portrait" />

        <service android:name=".service.ServiceTest" />
        <service android:name=".service.IntentServiceTest" />
        <service android:name=".service.BindServiceTest" />

        <activity android:name=".ui.okhttp.OkhttpActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
