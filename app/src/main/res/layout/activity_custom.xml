<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.custom.CustomActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">


        <com.blackcat.example.view.CircleView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/colorRed"
            android:scaleType="centerCrop"
            android:src="@drawable/touch_event_u_img" />

        <com.blackcat.example.view.RectView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorRed"
            android:scaleType="centerCrop"
            android:src="@drawable/touch_event_u_img" />

        <com.blackcat.example.view.PointView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorRed"
            android:scaleType="centerCrop"
            android:src="@drawable/touch_event_u_img" />

        <com.blackcat.example.view.PointsView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorRed"
            android:scaleType="centerCrop"
            android:src="@drawable/touch_event_u_img" />

        <com.blackcat.example.view.OvalView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorRed"
            android:scaleType="centerCrop"
            android:src="@drawable/touch_event_u_img" />

        <com.blackcat.example.view.LineView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorRed"
            android:scaleType="centerCrop"
            android:src="@drawable/touch_event_u_img" />

        <com.blackcat.example.view.LinesView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorRed"
            android:scaleType="centerCrop"
            android:src="@drawable/touch_event_u_img" />


    </LinearLayout>
</ScrollView>